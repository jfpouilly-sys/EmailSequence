<Window x:Class="LeadGenerator.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:LeadGenerator.Desktop.ViewModels"
        Title="Lead Generator" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}">
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="Lead Generator" Foreground="White" FontSize="20"
                          FontWeight="Bold" Margin="20,0,20,30"/>

                <Button Content="Dashboard" Background="Transparent" Foreground="White"
                       BorderThickness="0" Height="45" HorizontalContentAlignment="Left"
                       Padding="20,0" Command="{Binding NavigateToDashboardCommand}"/>
                <Button Content="Campaigns" Background="Transparent" Foreground="White"
                       BorderThickness="0" Height="45" HorizontalContentAlignment="Left"
                       Padding="20,0" Command="{Binding NavigateToCampaignsCommand}"/>
                <Button Content="Contacts" Background="Transparent" Foreground="White"
                       BorderThickness="0" Height="45" HorizontalContentAlignment="Left"
                       Padding="20,0" Command="{Binding NavigateToContactsCommand}"/>
                <Button Content="Reports" Background="Transparent" Foreground="White"
                       BorderThickness="0" Height="45" HorizontalContentAlignment="Left"
                       Padding="20,0" Command="{Binding NavigateToReportsCommand}"/>

                <Separator Margin="20,20" Background="White" Opacity="0.2"/>

                <Button Content="Logout" Background="Transparent" Foreground="White"
                       BorderThickness="0" Height="45" HorizontalContentAlignment="Left"
                       Padding="20,0" Command="{Binding LogoutCommand}"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="{StaticResource BackgroundBrush}">
            <ContentControl Content="{Binding CurrentView}"/>
        </Grid>
    </Grid>
</Window>
