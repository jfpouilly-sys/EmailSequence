<Window x:Class="LeadGenerator.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:LeadGenerator.Desktop.ViewModels"
        Title="Lead Generator - Login" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Border Width="350" Height="300" Background="White" CornerRadius="8"
                Padding="40" VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.1"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Lead Generator" FontSize="24" FontWeight="Bold"
                          HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Sign in to your account" FontSize="14"
                          Foreground="{StaticResource SecondaryBrush}"
                          HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBlock Text="Username" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                        Height="35" Padding="10" FontSize="14"/>

                <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,15,0,5"/>
                <PasswordBox x:Name="PasswordBox" Height="35" Padding="10" FontSize="14"/>

                <TextBlock Text="{Binding ErrorMessage}" Foreground="{StaticResource DangerBrush}"
                          Margin="0,10,0,0" TextWrapping="Wrap"
                          Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <Button Content="Sign In" Style="{StaticResource PrimaryButton}"
                       Height="40" Margin="0,20,0,0"
                       Command="{Binding LoginCommand}"
                       IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>

                <ProgressBar IsIndeterminate="True" Height="4" Margin="0,15,0,0"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
