{
  "Application": {
    "Name": "Lead Generator Mail Service",
    "Version": "260128-2"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=leadgenerator;Username=leadgen_user;Password=ChangeThisPassword123!"
  },
  "WorkstationId": "WORKSTATION-01",
  "ScanIntervalSeconds": 60,
  "Outlook": {
    "ScanFolders": [
      "Inbox",
      "Unsubscribe"
    ],
    "ProcessedFolder": "Processed",
    "UseDefaultSignature": true
  },
  "Sending": {
    "MaxRetries": 3,
    "RetryDelayMinutes": 5,
    "RespectSendingWindow": true
  },
  "Unsubscribe": {
    "KeywordsEN": [
      "UNSUBSCRIBE",
      "STOP",
      "REMOVE",
      "OPT OUT",
      "OPT-OUT"
    ],
    "KeywordsFR": [
      "DÉSINSCRIRE",
      "DÉSINSCRIPTION",
      "STOP",
      "ARRÊTER",
      "SUPPRIMER"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
